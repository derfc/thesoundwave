<section class="set-height">
     <h1 class="pt-4 px-4">Shopping Cart</h1>

     <div class="cart-item px-4 row">
          {{#each item}}

          <div class="col-lg-2 col-md-3 col-sm-4 my-3">
               <div class="album-img">
                    <img class="image py-2 img-fluid" src="{{this.item_photo}}" alt="Living Things" />
               </div>
               <h5>{{this.item_name}}</h5>
               <h6>${{divide this.item_price 100}}</h6>

               <input type="number" class="quantity" min="1" max="100" data-item_id="{{this.id}}" data-user_id="1"
                    data-subtotal={{divide this.item_price 100}}>
               <h6 style="display:inline" id="subtotal{{this.id}}" class="pt-2 subtotal">${{divide this.item_price
                    100}}
               </h6>
               <button class="btn mx-1 delete-item" data-item_id="{{this.id}}" data-user_id="1"
                    data-store_id={{this.store_id}}><i class="fad fa-trash" data-item_id="{{this.id}}" data-user_id="1"
                         data-store_id={{this.store_id}}></i></button>
          </div>
          {{/each}}
     </div>


     <div class="px-4 pt-2">
          <div>
               <h5 id="total">TOTAL = $</h5>
               <button id="checkout" class="btn px-4 btn-secondary button-checkout" value="checkout"><i
                         class="fad fa-credit-card"></i>
                    Checkout</button>
          </div>
     </div>

     <script src="./script.js"></script>
</section>