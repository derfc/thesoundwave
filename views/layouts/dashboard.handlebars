<script src={{searchScript}}></script>
{{/if}}
{{#if storeScript}}
<script src={{storeScript}}></script>
{{/if}}
{{#if musicPlayerScript}}
<script src={{musicPlayerScript}}></script>
{{/if}}
{{#if honeMusicPlayer}}
<script src={{honeMusicPlayer}}></script>
{{/if}}
