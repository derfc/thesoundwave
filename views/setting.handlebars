<section class="set-height">

    {{#if displayName}}
    <h2>{{displayName}}'s setting</h2>
    {{else}}
    <h2>{{user}}'s setting</h2>
    {{/if}}
    <div class="setting-display-name">
        <lable for="display-name">display name:</lable>
        <p id="display-name" style="display: block;" name="display-name">{{displayName}}</p>
        <input style="display: none;" id="edit-display-name" class="text-area" placeholder="{{displayName}}"></input>
        <button class="button-edit" id="button-edit">edit</button>
        <div class="confirm"></div>
        <div id="check-availability"></div>
    </div>

    </div>
    </div>
</section>